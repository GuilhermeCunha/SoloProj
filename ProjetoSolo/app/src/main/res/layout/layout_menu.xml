<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/btnMenuListarProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginStart="500dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="500dp"
        android:text="Listar Produtos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMenuCadastrarProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginStart="500dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="500dp"
        android:text="Cadastrar Produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuListarProdutos" />

    <Button
        android:id="@+id/btnMenuRemoverAnuncio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginStart="500dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="500dp"
        android:text="Remover Produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuCadastrarProduto" />

    <Button
        android:id="@+id/btnListarAnunciosRecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginStart="500dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="500dp"
        android:text="Listar Anuncios Recycle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuRemoverAnuncio" />
</androidx.constraintlayout.widget.ConstraintLayout>